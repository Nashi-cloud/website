<header class="fixed w-full top-0 z-50 bg-nashi-100/90 backdrop-blur-sm border-b border-nashi-200 transition-all duration-300" id="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center gap-3">
        <a href="#" class="flex items-center gap-2 group">
            <img class="h-12 w-12 rounded-lg shadow-sm group-hover:shadow-md transition-all duration-300" src="/img/nashi_logo_01_square.png" alt="Nashi Cloud Logo" />
            <span class="font-bold text-2xl text-nashi-900 tracking-tight">Nashi Cloud</span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#services" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Services</a>
        <a href="#valeurs" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Nos Valeurs</a>
        <a href="#tarifs" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Offres</a>
        <a href="#contact" class="px-5 py-2.5 rounded-full bg-nashi-900 text-nashi-100 font-semibold hover:bg-nashi-600 hover:text-white transition-all shadow-sm hover:shadow-md">
          Nous Contacter
        </a>
      </nav>

      <!-- Mobile Menu Button (Placeholder) -->
      <div class="md:hidden flex items-center">
        <button class="text-nashi-900 hover:text-nashi-600 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<header class="fixed w-full top-0 z-50 bg-nashi-100/90 backdrop-blur-sm border-b border-nashi-200 transition-all duration-300" id="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center gap-3">
        <a href="/" class="flex items-center gap-2 group">
            <img class="h-12 w-12 rounded-lg shadow-sm group-hover:shadow-md transition-all duration-300" src="/img/logo.svg" alt="Nashi Cloud Logo" />
            <span class="font-bold text-2xl text-nashi-900 tracking-tight">Nashi Cloud</span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/#services" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Services</a>
        <a href="/#valeurs" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Nos Valeurs</a>
        <a href="/#tarifs" class="text-nashi-900 hover:text-nashi-600 font-medium transition-colors">Offres</a>
        <a href="/#contact" class="px-5 py-2.5 rounded-full bg-nashi-900 text-nashi-100 font-semibold hover:bg-nashi-600 hover:text-white transition-all shadow-sm hover:shadow-md">
          Nous Contacter
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="text-nashi-900 hover:text-nashi-600 focus:outline-none p-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="hidden md:hidden bg-nashi-100 border-b border-nashi-200 absolute w-full left-0 top-20 shadow-lg">
    <div class="px-4 pt-2 pb-6 space-y-2">
      <a href="/#services" class="block px-3 py-2 rounded-md text-base font-medium text-nashi-900 hover:text-nashi-600 hover:bg-nashi-200 transition-colors">Services</a>
      <a href="/#valeurs" class="block px-3 py-2 rounded-md text-base font-medium text-nashi-900 hover:text-nashi-600 hover:bg-nashi-200 transition-colors">Nos Valeurs</a>
      <a href="/#tarifs" class="block px-3 py-2 rounded-md text-base font-medium text-nashi-900 hover:text-nashi-600 hover:bg-nashi-200 transition-colors">Offres</a>
      <a href="/#contact" class="block px-3 py-2 mt-4 text-center rounded-full bg-nashi-900 text-nashi-100 font-semibold hover:bg-nashi-600 hover:text-white transition-all">
        Nous Contacter
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });

    // Fermer le menu quand on clique sur un lien
    const links = menu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
      });
    });
  }
</script>

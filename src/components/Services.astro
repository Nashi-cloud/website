---
const services = [
  {
    title: "Nashi Drive",
    description: "Alternative souveraine à Drive/OneDrive. Stockez, partagez et synchronisez vos fichiers en toute sécurité.",
    icon: "cloud"
  },
  {
    title: "Nashi Mail",
    description: "Messagerie professionnelle complète (Webmail, IMAP, SMTP). Vos échanges restent privés, sans analyse publicitaire.",
    icon: "mail"
  },
  {
    title: "Nashi Visio",
    description: "Visioconférence illimitée, sécurisée et fluide. Partage d'écran et chat intégrés, sans installation requise.",
    icon: "video"
  },
  {
    title: "Nashi Automate",
    description: "Connectez vos applications (type n8n). Créez des workflows intelligents pour automatiser vos tâches répétitives.",
    icon: "automation"
  }
];
---

<section id="services" class="py-24 bg-white/40 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-nashi-900 mb-4">Nos Services</h2>
      <p class="text-lg text-nashi-900/70 max-w-2xl mx-auto">
        Une suite complète d'outils pour votre entreprise, sans compromis sur la sécurité ou la souveraineté.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 justify-center">
      {services.map(service => (
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-nashi-200 hover:shadow-xl hover:border-nashi-400 transition-all duration-300 group">
          <div class="w-14 h-14 bg-nashi-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-nashi-500 transition-colors duration-300">
            {/* Simple SVG Icons based on service type */}
            {service.icon === 'cloud' && (
              <svg class="w-8 h-8 text-nashi-900" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>
            )}
            {service.icon === 'mail' && (
              <svg class="w-8 h-8 text-nashi-900" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
            )}
            {service.icon === 'video' && (
              <svg class="w-8 h-8 text-nashi-900" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
            )}
            {service.icon === 'automation' && (
              <svg class="w-8 h-8 text-nashi-900" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
            )}
          </div>
          <h3 class="text-xl font-bold text-nashi-900 mb-3">{service.title}</h3>
          <p class="text-nashi-900/70 leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
